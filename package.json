{
  "name": "ledger",
  "private": true,
  "devDependencies": {
    "eslint": "^7.19.0",
    "lerna": "^3.22.1",
    "prettier": "^2.2.1"
  },
  "scripts": {
    "bootstrap": "lerna bootstrap && lerna run migrate && lerna run seed",
    "dev": "lerna run dev --parallel",
    "build": "lerna run build --parallel",
    "createacc": "lerna run createacc",
    "prettier:clean": "prettier **/* -w",
    "lerna": "lerna"
  },
  "prettier": {
    "trailingComma": "es5",
    "tabWidth": 2,
    "semi": true,
    "jsxSingleQuote": false,
    "bracketSpacing": true,
    "jsxBracketSameLine": true,
    "arrowParens": "always",
    "singleQuote": true,
    "printWidth": 100
  }
}
