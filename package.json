{
  "name": "ledger",
  "private": true,
  "devDependencies": {
    "@commitlint/cli": "^12.1.1",
    "@commitlint/config-conventional": "^12.1.1",
    "eslint": "^7.19.0",
    "husky": "^6.0.0",
    "lerna": "^3.22.1",
    "prettier": "^2.2.1"
  },
  "scripts": {
    "bootstrap": "lerna bootstrap",
    "dev:server": "lerna run --scope server dev",
    "test:server": "lerna run --scope test-server test",
    "prettier:clean": "prettier **/* -w",
    "lerna": "lerna"
  },
  "prettier": {
    "trailingComma": "es5",
    "tabWidth": 2,
    "semi": true,
    "jsxSingleQuote": false,
    "bracketSpacing": true,
    "jsxBracketSameLine": true,
    "arrowParens": "always",
    "singleQuote": true,
    "printWidth": 100
  }
}
